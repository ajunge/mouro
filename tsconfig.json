{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": ".build/src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}